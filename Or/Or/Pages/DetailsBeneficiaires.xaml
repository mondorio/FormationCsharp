<PageFunction
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Or.Pages"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
xmlns:models="clr-namespace:Or.Models"
x:TypeArguments="sys:Int64"
        xmlns:Business="clr-namespace:Or.Business" x:Class="Or.Pages.DetailsBeneficiaires"
        mc:Ignorable="d"
        Title="DetailsBeneficiaires" Height="450" Width="800">
    <Grid>

        <TextBlock x:Name="Titre" HorizontalAlignment="Left" Margin="29,51,0,0" TextWrapping="Wrap" Text="Détails Beneficiaires" VerticalAlignment="Top" FontSize="20"/>

        <TextBlock x:Name="IdCompte" HorizontalAlignment="Left" Margin="36,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        <TextBlock x:Name="TypeCompte" HorizontalAlignment="Left" Margin="36,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        <TextBlock x:Name="Solde" HorizontalAlignment="Left" Margin="36,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Background="#FFD2D0D0" Height="20" FontSize="14"/>

        <ListView x:Name="listView" Margin="259,56,81,150" IsEnabled="True" MaxHeight="500">
            <ListView.Resources>
                <Business:EuroConverter x:Key="EuroConverter"/>
                <Business:TypeConverter x:Key="TypeConverter"/>
                <Business:IsNegativeConverter x:Key="IsNegativeConverter"/>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nom" Width="80">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Nom}"
                                    Style="{StaticResource TextColumnStyle}"
                                    TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Prénom" Width="200">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Prenom}"
                                    Style="{StaticResource TextColumnStyle}"
                                    TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="N°compte" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NumeroCompte}"
                                        Style="{StaticResource TextColumnStyle}"
                                      TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Action" Width="110">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Supprimer" Click="SuprimerBenef_click" CommandParameter="{Binding Id}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Retour_Click" Margin="22,310,0,0"/>
        <Button x:Name="AjouterBeneficiaire" Content="Ajouter un bénéficiaire" HorizontalAlignment="Left" VerticalAlignment="Top" Click="AjouterBenef_click" Margin="389,310,0,0"/>
    </Grid>
</PageFunction>
