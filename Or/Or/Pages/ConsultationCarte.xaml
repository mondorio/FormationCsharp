<PageFunction x:Class="Or.Pages.ConsultationCarte"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConsultationCarte" KeepAlive="True">

    <Grid>
        <TextBlock x:Name="Titre" HorizontalAlignment="Left" Margin="100,85,0,0" TextWrapping="Wrap" Text="Consultation Carte" VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold"/>

        <TextBlock x:Name="Numero" HorizontalAlignment="Left" Margin="100,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        <TextBlock x:Name="Nom" HorizontalAlignment="Left" Margin="100,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Background="#FFD2D0D0" Height="20" FontSize="14"/>
        <TextBlock x:Name="Prenom" HorizontalAlignment="Left" Margin="100,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Background="#FFD2D0D0" Height="20" FontSize="14"/>

        <ListView x:Name="listView" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,88,0,0">
            <ListView.Resources>
                <ec:EuroConverter x:Key="EuroConverter"/>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Id}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Type de compte" Width="130">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding TypeDuCompte}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Solde du compte" Width="150">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Solde, Converter={StaticResource EuroConverter}}"
                                               Style="{StaticResource TextColumnStyle}"
                                               TextAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Actions"  Width="100">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Détails" Click="GoDetailsCompte" CommandParameter="{Binding Id}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Consulter Historique" Margin="100,260,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GoHistoTransactions" Width="180"/>
        <Button Content="Effectuer un Retrait" Margin="100,300,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GoRetrait" Width="180"/>
        <Button Content="Effectuer un Dépôt" Margin="100,340,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GoDepot" Width="180"/>
        <Button Content="Effectuer un Virement" Margin="100,380,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GoVirement" Width="180"/>
    </Grid>
</PageFunction>
