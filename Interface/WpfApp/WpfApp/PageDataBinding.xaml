<Page x:Class="WpfApp.PageDataBinding"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      xmlns:ec="clr-namespace:WpfApp.Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageDataBinding">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" Background="LightGray" BorderThickness="2" Padding="5" Grid.Row="0" Grid.Column="0">
            <StackPanel Margin="5" Orientation="Vertical">

                <!-- TextBlock lié au clic de Valider -->
                <TextBlock Text="{Binding Titulaire.Nom}" 
                   FontSize="16" 
                   Margin="0,10,0,0"
                   VerticalAlignment="Stretch"
                   HorizontalAlignment="Stretch"/>

                <Button x:Name="Valider" Content="Valider" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Retour_Click"/>
            </StackPanel>
        </Border>

        <Border BorderBrush="Black" Background="LightBlue" BorderThickness="2" Padding="5" Grid.Row="1" Grid.Column="0">
            <StackPanel Margin="5" Orientation="Vertical">

                <!-- TextBox lié en TwoWay -->
                <TextBox Text="{Binding Titulaire.Prenom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                <!-- TextBlock lié en OneWay (par défaut) -->
                <TextBlock Text="{Binding Titulaire.Prenom}" 
           FontSize="16" 
           Margin="0,10,0,0"
           VerticalAlignment="Stretch"
           HorizontalAlignment="Stretch"/>

            </StackPanel>
        </Border>

        <StackPanel Margin="5" Orientation="Vertical" Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="2">
            <Label x:Name="label" Content="Liste des titulaires" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="14" Target="{Binding ElementName=ListView}"/>
            <ListView Name="ListView" ItemsSource="{Binding ListePersonnes}" Grid.Row="0" Grid.Column="1"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SizeChanged="ListView_SizeChanged">
                <ListView.Resources>
                    <ec:DateConverter x:Key="DateConverter"/>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" />
                        <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prenom}"/>
                        <!--<GridViewColumn Header="Age" DisplayMemberBinding="{Binding Age}"/>-->

                        <GridViewColumn Header="Date">

                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock Text="{Binding DateAjout, Converter={StaticResource DateConverter}}" TextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel Margin="5" Orientation="Vertical" Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Grid.ColumnSpan="1">
            <Label x:Name="choix" Content="Choix titulaire" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="14" Target="{Binding ElementName=Choix}"/>
            <ComboBox Name="Choix" Width="200" 
                                    ItemsSource="{Binding ListePersonnes}"
                                    DisplayMemberPath="Nom"
                                    SelectedValuePath="Nom"
                                    SelectedValue="{Binding NomSelectionne}"
                                    SelectionChanged="Titulaire_SelectionChanged"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Choisissez un point cardinal :" Margin="0,5,0,0"/>
            <RadioButton GroupName="Axe" Content="Nord" Checked="RadioButton_Checked"/>
            <RadioButton GroupName="Axe" Content="Sud" Checked="RadioButton_Checked"/>
            <RadioButton GroupName="Axe" Content="Ouest" Checked="RadioButton_Checked"/>
            <RadioButton GroupName="Axe" Content="Est" Checked="RadioButton_Checked" />
        </StackPanel>
    </Grid>
</Page>
